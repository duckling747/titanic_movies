{% extends 'base.j2' %}

{% block content %}

    <section id="welcome_banner" class="banner">
        <h2>Welcome to Titanic Movies!</h2>
        <p>Your go to place for the best an most coherent reviews of movies all kinds.</p>
    </section>

    <section class="banner">
        <h2>Top graded</h2>
        {% if top_graded %}
            <ol>
                {% for m in top_graded %}
                    <li>
                        <a href="{{ url_for('movie_details', id=m.id) }}">
                            {{ m.title }}, {{ m.year }}
                        </a>
                        (grade average {{ m.avg }})
                    </li>
                {% endfor %}
            </ol>
        {% else %}
            <p>No reviews yet...</p>
        {% endif %}
    </section>

    <section class="banner">
        <h2>New additions</h2>
        {% if newbies %}
            <ul>
                {% for n in newbies %}
                    <li>
                        {{ n.timestamp.date() }}: 
                        <a href="{{ url_for('movie_details', id=n.id) }}">{{ n.title }}, {{ n.year }}</a>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p>No movies added...</p>
        {% endif %}
    </section>
{% endblock content %}
