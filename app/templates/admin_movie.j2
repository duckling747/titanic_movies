{% extends "admin.j2" %}
{% block adminstuff %}
    <section>
        <h2>Movies in db:</h2>
        {% if movies %}
            <table>
                <tr>
                    <th>title</th>
                    <th>year</th>
                    <th>date added</th>
                    <th>actors</th>
                    <th>genres</th>
                </tr>
                {% for m in movies %}
                <tr>
                    <td>{{ m.title }}</td>
                    <td>{{ m.year }}</td>
                    <td>{{ m.timestamp.date() }}</td>
                    <td>
                    {% for a in m.actors %}
                        <div class="flex-entry adm-list">
                            <div>{{ a.name }}</div>
                            <form action="{{ url_for('admin_movie_del_actor', movie_id=m.id, actor_id=a.id) }}"
                                method="POST" novalidate>
                                {{ del_form.hidden_tag() }}
                                <div>{{ del_form.submit() }}</div>
                            </form>
                        </div>
                    {% else %}
                        <div class="flex-entry adm-list">
                            <div>No actors...</div>
                        </div>
                    {% endfor %}
                        <div class="flex-entry adm-list">
                            <form action="{{ url_for('admin_movie_add_actor', id=m.id) }}" method="POST" novalidate>
                                {{ add_actor.hidden_tag() }}
                                <div>
                                    {{ add_actor.select() }} {{ add_actor.submit() }}
                                </div>
                            </form>
                        </div>
                    </td>
                    <td>
                    {% for g in m.genres %}
                        <div class="flex-entry adm-list">
                            <div>{{ g.name }}</div>
                            <form action="{{ url_for('admin_movie_del_genre', movie_id=m.id, genre_id=g.id) }}"
                                method="POST" novalidate>
                                {{ del_form.hidden_tag() }}
                                <div>{{ del_form.submit() }}</div>
                            </form>
                        </div>
                    {% else %}
                        <div class="flex-entry adm-list">
                            <div>No genres...</div>
                        </div>
                    {% endfor %}
                        <div class="flex-entry adm-list">
                            <form action="{{ url_for('admin_movie_add_genre', id=m.id) }}" method="POST" novalidate>
                                {{ add_genre.hidden_tag() }}
                                <div>
                                    {{ add_genre.select() }} {{ add_genre.submit() }}
                                </div>
                            </form>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </table>
        {% else %}
            <p>No movies yet...</p>
        {% endif %}
    </section>
    <div class="flex-entry">
        <section class="adm-add">
            <h2>Add new:</h2>
            <form action="" method="POST" novalidate>
                {{ add_form.hidden_tag() }}
                <p>
                    {{ add_form.title.label }}<br>
                    {{ add_form.title(size=32) }}
                    {% for e in add_form.title.errors %}
                        <div style="color: red;">{{ e }}</div>
                    {% endfor %}
                </p>
                <p>
                    {{ add_form.year.label }}<br>
                    {{ add_form.year(size=32) }}
                    {% for e in add_form.year.errors %}
                        <div style="color: red;">{{ e }}</div>
                    {% endfor %}
                </p>
                <p>
                    {{ add_form.submit() }}
                </p>
            </form>
        </section>

        <section class="adm-del">
            <h2>Delete:</h2>
            <form action="{{ url_for('admin_del_movie') }}" method="POST" novalidate>
                {{ del_movie_form.hidden_tag() }}
                <p>
                    {{ del_movie_form.select.label }}<br>
                    {{ del_movie_form.select }}
                </p>
                <p>
                    {{ del_movie_form.submit() }}
                </p>
            </form>
        </section>
    </div>

{% endblock adminstuff %}
